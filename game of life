#include <stdio.h>
#include <stdlib.h>

#define height 80
#define width 25
#define dead '0'
#define life '1'



int main() {
    
}

//проверка живых клеток, у которых есть живые соседи (neighbors)
void life_dead_or_life(char** arr, int x, int y, int neighbors) {
    if (neighbors < 2) arr[y][x] = dead;
    if (neighbors > 3) arr[y][x] = dead;
}

//учесть Если это пустая клетка и соседей ровно 3, то эта клетка оживает. 
//Во всех остальных случаях пустая клетка остается пустой.
void dead_life(char** arr, int x, int y, int neighbors) {
    if (neighbors == 3) arr[y][x] = life;
}


int count_of_neighbors(char** arr, int x, int y) {
    int count = 0;
    for (int i = 0; i < y; i++) {
        for (int j = 0, j < x; j++) {

        }
    }
    
    return count;
}

//подсчитываю количество соседей 
int neighbors(char** arr, int x, int y) {
    int sum = 0; 
    for (int i = -1; i < 2; i++) {
         for (int j = -1, j < 2; j++) {
            // обработка крайних ситуаций (поле замкнуто само на себе)
            sum += arr[x + i][y + j]
        }
    }
    sum -= arr[x][y] //удаляем саму нашу клетку из подсчета ее соседей

}
